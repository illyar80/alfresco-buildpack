#!/usr/bin/env bash
# bin/release <build-dir>
#$BUILD_DIR = $1

cat <<EOF
---
config_vars:
  PATH: \$HOME/jdk/bin:/usr/local/bin:/usr/bin:/bin
  JAVA_HOME: \$HOME/jdk
  JRE_HOME: \$HOME/jdk
  CATALINA_HOME: \$HOME/tomcat
  JAVA_OPTS: -Djava.io.tmpdir=\$HOME  -Dalpha=bravo -Xmx384m -Xss512k -XX:+UseCompressedOops -Xmx382293 -Xms382293K -XX:MaxPermSize=64M -XX:PermSize=64M -Xss995K -Dhttp.port=\$PORT
default_process_types:
  web: \$CATALINA_HOME/bin/catalina.sh start
EOF
